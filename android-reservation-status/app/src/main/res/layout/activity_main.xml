<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#F5F5F5">

    <!-- タイトル -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="予約状況モニター"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:gravity="center"
        android:layout_marginBottom="32dp" />

    <!-- 一般予約カード -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="一般予約"
                android:textSize="14sp"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/statusTextGeneral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#CC6600"
                android:layout_marginTop="4dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- 視野予約カード -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="視野予約"
                android:textSize="14sp"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/statusTextShiya"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#006633"
                android:layout_marginTop="4dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- 更新時刻 -->
    <TextView
        android:id="@+id/updateTimeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="更新: --:--"
        android:textSize="12sp"
        android:textColor="#999999"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- ボタン -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/startButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="開始"
            android:textSize="16sp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="#4CAF50" />

        <Button
            android:id="@+id/stopButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="停止"
            android:textSize="16sp"
            android:layout_marginStart="8dp"
            android:backgroundTint="#F44336"
            android:enabled="false" />

    </LinearLayout>

    <!-- 説明 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="「開始」を押すと、ステータスバーに予約状況が表示されます。\n1分ごとに自動更新されます。"
        android:textSize="12sp"
        android:textColor="#666666"
        android:gravity="center"
        android:layout_marginTop="24dp"
        android:lineSpacingMultiplier="1.4" />

</LinearLayout>
